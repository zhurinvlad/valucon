<div class="text-center">
  <h3>Add new image</h3>
  <div class="row">
    <div class="col-lg-4 col-lg-offset-4">
  <%= form_tag({method: "post"}, multipart: true) do %>
    <%= file_field_tag(:image, class: "form-control")%>
    <br>
    <%= submit_tag("Add image", class: "btn btn-default") %>
  <% end %>
  </div> </div>
</div>
<br>
<div class="text-center">
  <h1>List of images</h1>
</div>
<ul class="row" id="images-list">
  <% @images.each do |image| %>
    <li class="col-xs-2">
      <%= link_to image_tag(image.image.thumb('100x100#').url, class: 'img-thumbnail'),
                  image.image.remote_url, target: '_blank' %>
    </li>
  <% end %>
</ul>